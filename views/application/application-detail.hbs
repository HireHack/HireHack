<h1>Vista Candidatura</h1>

<form class="delete-form d-inline" action="/delete-offer/{{offer._id}}" method="post">
    <button type="submit" class="btn btn-danger" onclick="return clicked()">Cerrar proceso</button>
</form>

<h2>Oferta</h2>
{{#with offer}}
{{!-- Offer detail --}}
<div class="border rounded p-3 mb-2">
    <h3>{{name}}</h3>
    <p><b>Descripci√≥n:</b> <br> {{description}}</p>
    <b>Requisitos:</b>
    {{#each skills}}
    {{#if @last}}
    <span>{{this}}</span>
    {{else}}
    <span>{{this}} |</span>
    {{/if}}
    {{/each}}
    <br>
    <a href="/edit-offer/{{_id}}">Editar Oferta</a>
</div>
{{/with}}

<h2>Candidatos</h2>
{{!-- Applicants --}}
{{#each application}}
<div class="border rounded p-3 mb-2">
    <h3>{{candidate.name}}</h3>
    <img src="{{candidate.picture}}" alt="Foto de perfil">
</div>
{{/each}}